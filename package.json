{
  "name": "prismplay",
  "version": "0.1.0",
  "private": true,
  "author": "Emir2099",
  "description": "PrismPlay â€” a sleek video library player for Windows (Electron + React + TS)",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p electron/tsconfig.json -w\" \"wait-on http://localhost:5173 file:electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:ui": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run build:ui && npm run build:electron",
    "start": "cross-env NODE_ENV=production electron .",
    "lint": "eslint --ext .ts,.tsx src electron",
    "dist": "echo Packaging is disabled in this setup. Install electron-builder to enable."
  },
  "dependencies": {
    "electron-store": "^9.0.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "mime-types": "^2.1.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.2",
    "jimp": "^1.6.0",
    "postcss": "^8.4.47",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.13",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.local.prismplay",
    "artifactName": "PrismPlay-Setup.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/main.js",
      "electron/preload.js",
      "electron/preload.cjs"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeader": "build/installerHeader.bmp",
      "installerSidebar": "build/installerSidebar.bmp",
      "deleteAppDataOnUninstall": false,
      "artifactName": "PrismPlay-Setup.${ext}"
    }
  }
}
